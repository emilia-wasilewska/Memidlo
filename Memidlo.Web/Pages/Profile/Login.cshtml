@page
@model Memidlo.Web.Pages.Profile.LoginModel
@{
}
<div class="container mt-5 mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 bg-light p-3">
            <partial name="_Notification"></partial>
            <h3 class="mb-3">Logowanie</h3>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label text-black light">Nazwa Użytkownika</label>
                    <input type="text" class="form-control" asp-for="Login.UserName" required />
                </div>
                <div class="mb-3">
                    <label class="form-label text-black light">Haslo</label>
                    <input type="password" class="form-control" asp-for="Login.Password" required />
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark" type="submit">Zaloguj</button>
                </div>
            </form>
        </div>
    </div>
</div>