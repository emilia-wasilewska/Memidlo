@page
@model Memidlo.Web.Pages.Profile.RegisterModel
@{
}

<div class="container mt-5 mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 bg-light p-3">
            <partial name="_Notification"></partial>
            <h3 class="mb-3">Rejestracja</h3>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label text-black light">Nazwa Użytkownika</label>
                    <input type="text" class="form-control" asp-for="RegisterUserVM.UserName" required/>
                    <span class="text-danger" asp-validation-for="RegisterUserVM.UserName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-black light">Email</label>
                    <input type="email" class="form-control" asp-for="RegisterUserVM.Email" required />
                    <span class="text-danger" asp-validation-for="RegisterUserVM.Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-black light">Haslo</label>
                    <input type="password" class="form-control" asp-for="RegisterUserVM.Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^\da-zA-Z]).{8,}"
                           title="Haslo musi skladać się przynajmniej z ośmiu znaków oraz zawierać przynajmniej jedną cyfrę, jedną wielką literę, jedną malą literę oraz znak specjalny" required />
                    <span class="text-danger" asp-validation-for="RegisterUserVM.Password"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark" type="submit">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>
